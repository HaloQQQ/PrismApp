<UserControl
    x:Class="CustomControlsDemoModule.Views.Controls.PasswordBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <PasswordBox MyAttachProperty.PlaceHolder="请输入密码.." />
        <PasswordBox
            HorizontalContentAlignment="Center"
            MyAttachProperty.IsReadOnly="True"
            MyAttachProperty.Password="123456" />
        <PasswordBox
            HorizontalContentAlignment="Right"
            IsEnabled="False"
            MyAttachProperty.Password="123456" />

        <PasswordBox HorizontalContentAlignment="Left" Style="{StaticResource PasswordBox_Copyable}" />
    </StackPanel>
</UserControl>
