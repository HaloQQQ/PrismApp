<Window
    x:Class="CustomControlsDemoModule.Views.ChineseChessWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CustomControlsDemoModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ChineseChessWindow"
    MinWidth="1200"
    MinHeight="640"
    Style="{StaticResource WithoutTitleBar}"
    WindowStartupLocation="CenterScreen">
    <DockPanel>
        <WindowTitleBar DockPanel.Dock="Top" />

        <local:ChineseChessView DockPanel.Dock="Bottom" />
    </DockPanel>
</Window>
