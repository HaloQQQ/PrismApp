<UserControl
    x:Class="CustomControlsDemoModule.Views.TextBoxesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CustomControlsDemoModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <WrapPanel>
        <WrapPanel>
            <WrapPanel.Style>
                <Style TargetType="WrapPanel">
                    <Setter Property="Visibility" Value="Collapsed" />

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Controls[1].IsSelected}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Controls[1].Items[0].IsSelected}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </WrapPanel.Style>

            <TextBox MyAttachProperty.PlaceHolder="TextBox" />
            <TextBox IsReadOnly="True" MyAttachProperty.PlaceHolder="TextBox" />
            <TextBox IsEnabled="False" MyAttachProperty.PlaceHolder="TextBox" />

            <TextBox MyAttachProperty.PlaceHolder="TextBox_DisplayInfo" Style="{StaticResource TextBox_DisplayInfo}" />
            <TextBox MyAttachProperty.PlaceHolder="TransparentTextBox" Style="{StaticResource TransparentTextBox}" />
            <TextBox MyAttachProperty.PlaceHolder="TextBox_FilteList" Style="{StaticResource TextBox_FilteList}" />
            <TextBox MyAttachProperty.PlaceHolder="TextBox_QueryTxt" Style="{StaticResource TextBox_QueryTxt}" />
            <TextBox MyAttachProperty.PlaceHolder="CopyAsTextBlock" Style="{StaticResource CopyAsTextBlock}" />
            <TextBox
                FontSize="25"
                MyAttachProperty.PlaceHolder="TextBox_PlaceHolderAsLable"
                Style="{StaticResource TextBox_PlaceHolderAsLable}" />
        </WrapPanel>

        <WrapPanel>
            <WrapPanel.Style>
                <Style TargetType="WrapPanel">
                    <Setter Property="Visibility" Value="Collapsed" />

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Controls[1].IsSelected}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Controls[1].Items[1].IsSelected}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </WrapPanel.Style>

            <RichTextBox
                IsReadOnly="False"
                MyAttachProperty.AttachPlaceHolderToRichTextBox="True"
                MyAttachProperty.PlaceHolder="RichTextBox" />

            <RichTextBox IsReadOnly="True" />

            <RichTextBox IsEnabled="False" />
        </WrapPanel>

        <WrapPanel>
            <WrapPanel.Style>
                <Style TargetType="WrapPanel">
                    <Setter Property="Visibility" Value="Collapsed" />

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Controls[1].IsSelected}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Controls[1].Items[2].IsSelected}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </WrapPanel.Style>

            <PasswordBox MyAttachProperty.PlaceHolder="请输入密码.." />
            <PasswordBox MyAttachProperty.IsReadOnly="True" MyAttachProperty.Password="123456" />
            <PasswordBox IsEnabled="False" MyAttachProperty.Password="123456" />
        </WrapPanel>
    </WrapPanel>
</UserControl>
