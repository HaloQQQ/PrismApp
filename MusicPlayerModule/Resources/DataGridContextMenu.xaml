                <TextBlock Style="{StaticResource IconTextNoForegroundChanged}">
                    <TextBlock Text="&#xe704;" />
                    <TextBlock Text="下一首播放" />
                </TextBlock>
            </MenuItem.Header>
        </MenuItem>

        <MenuItem CommandParameter="{Binding PlacementTarget.SelectedItem.Music.FileDir,RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                  Command="{Binding PlacementTarget.DataContext.OpenInExploreCommand,RelativeSource={RelativeSource AncestorType=ContextMenu}}">
