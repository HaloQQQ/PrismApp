                                <Binding Path="ActualHeight" RelativeSource="{RelativeSource AncestorType=Border}" />
                                <Binding ElementName="OperatrionPanel" Path="ActualHeight" />
                            </MultiBinding.Bindings>
                        </MultiBinding>
                    </DockPanel.Height>

                    <TextBlock
                        HorizontalAlignment="Center"
                        DockPanel.Dock="Top"
                        FontSize="21"
