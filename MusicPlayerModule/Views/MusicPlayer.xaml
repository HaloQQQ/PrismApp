                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        SelectionChanged="LyricList_SelectionChanged"
                        Style="{StaticResource LyricListBox}"
                        Visibility="Visible">
                        <ListBox.ItemContainerStyle>
                            <Style BasedOn="{StaticResource LyricListBoxItem}" TargetType="ListBoxItem">
                                <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick" />
                                <EventSetter Event="PreviewMouseRightButtonDown" Handler="SwitchLyricMode" />

                                <Setter Property="Height" Value="50" />
                                <Setter Property="Padding" Value="80,0" />

                                <Setter Property="IsSelected" Value="{Binding IsPlayingLine, Mode=OneWay}" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPlayingLine}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        DecelerationRatio="0.5"
                                                        Storyboard.TargetProperty="(ListBoxItem.RenderTransform).(ScaleTransform.ScaleX)"
                                                        To="1.5"
                                                        Duration="0:0:0.5" />
                                                    <DoubleAnimation
                                                        DecelerationRatio="0.5"
                                                        Storyboard.TargetProperty="(ListBoxItem.RenderTransform).(ScaleTransform.ScaleY)"
                                                        To="1.5"
                                                        Duration="0:0:0.5" />
                                                    <!--<DoubleAnimation
                                                        DecelerationRatio="0.5"
                                                        Storyboard.TargetProperty="FontSize"
                                                        To="30"
                                                        Duration="0:0:0.5" />-->
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        DecelerationRatio="0.5"
                                                        Storyboard.TargetProperty="(ListBoxItem.RenderTransform).(ScaleTransform.ScaleX)"
                                                        To="1.0"
                                                        Duration="0:0:0.5" />
                                                    <DoubleAnimation
                                                        DecelerationRatio="0.5"
                                                        Storyboard.TargetProperty="(ListBoxItem.RenderTransform).(ScaleTransform.ScaleY)"
                                                        To="1.0"
                                                        Duration="0:0:0.5" />
                                                    <!--<DoubleAnimation
                                                        DecelerationRatio="0.5"
                                                        Storyboard.TargetProperty="FontSize"
                                                        To="20"
                                                        Duration="0:0:0.5" />-->
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </DockPanel>
            </DockPanel>

