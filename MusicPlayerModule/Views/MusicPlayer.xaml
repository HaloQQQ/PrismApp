                                            Value="{Binding CurrentLyricFontSize}" />

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Margin="-2,0,0,0"
                                                Style="{StaticResource ThemeBlk}"
                                                Text="15" />
                                            <TextBlock
                                                Margin="46,0,0,0"
                                                Style="{StaticResource ThemeBlk}"
                                                Text="20" />
                                            <TextBlock
                                                Margin="48,0,0,0"
                                                Style="{StaticResource ThemeBlk}"
                                                Text="25" />
                                            <TextBlock
                                                Margin="46,0,0,0"
                                                Style="{StaticResource ThemeBlk}"
                                                Text="30" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
