<UserControl
    x:Class="MusicPlayerModule.Views.OperationButtonsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style
            x:Key="PlayAllButton"
            BasedOn="{StaticResource ButtonBase_Icon_Conent_Transparent}"
            TargetType="Button">
            <Setter Property="MyAttachProperty.IconFontText" Value="&#xea6d;" />
            <Setter Property="Content" Value="播放" />
        </Style>

        <Style
            x:Key="DownloadButton"
            BasedOn="{StaticResource ButtonBase_Icon_Conent_Transparent}"
            TargetType="Button">
            <Setter Property="MyAttachProperty.IconFontText" Value="&#xe63b;" />
            <Setter Property="Content" Value="下载" />
        </Style>

        <Style
            x:Key="AddFilesButton"
            BasedOn="{StaticResource ButtonBase_Icon_Conent_Transparent}"
            TargetType="Button">
            <Setter Property="MyAttachProperty.IconFontText" Value="&#xe663;" />
            <Setter Property="Content" Value="本地添加" />
        </Style>

        <Style
            x:Key="BatchOperateToggleButton"
            BasedOn="{StaticResource ButtonBase_Icon_Conent_Transparent}"
            TargetType="ToggleButton">
            <Setter Property="MyAttachProperty.IconFontText" Value="&#xe74f;" />
            <Setter Property="Content" Value="批量操作" />

            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style
            x:Key="DeleteButton"
            BasedOn="{StaticResource ButtonBase_Icon_Conent_Transparent}"
            TargetType="Button">
            <Setter Property="MyAttachProperty.IconFontText" Value="&#xec7b;" />
            <Setter Property="Content" Value="删除" />

            <Setter Property="Visibility" Value="Collapsed" />

            <Style.Triggers>
                <DataTrigger Binding="{Binding DistributeMusicViewModel.CanBatchSelect, Mode=OneWay}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style
            x:Key="CategoryRadioButton"
            BasedOn="{StaticResource {x:Type ToggleButton}}"
            TargetType="RadioButton">
            <Style.Triggers>
                <DataTrigger Binding="{Binding DistributeMusicViewModel.DisplayFavorites.Count}" Value="0">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
                <DataTrigger Binding="{Binding DistributeMusicViewModel.IsLoading}" Value="True">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource ShallowBlue}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15,0" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*" />
            <ColumnDefinition Width="23*" />
            <ColumnDefinition Width="32*" />
        </Grid.ColumnDefinitions>

        <Viewbox
            Grid.Column="0"
            HorizontalAlignment="Left"
            Style="{StaticResource OnlyDownViewbox}">
            <StackPanel Orientation="Horizontal">
                <Button
                    Command="{Binding PlayAllCommand}"
                    IsEnabled="{Binding DistributeMusicViewModel.IsLoading, Converter={StaticResource OppositeBoolConverter}}"
                    Style="{StaticResource PlayAllButton}"
                    ToolTip="{Binding KeyGestureDic[播放所有音乐].ToolTip}" />

                <ToggleButton IsChecked="{Binding DistributeMusicViewModel.CanBatchSelect, Mode=TwoWay}">
                    <ToggleButton.Style>
                        <Style BasedOn="{StaticResource BatchOperateToggleButton}" TargetType="ToggleButton">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DistributeMusicViewModel.DisplayFavorites.Count}" Value="0">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DistributeMusicViewModel.IsLoading}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

                <Button
                    Command="{Binding DownLoadCommand}"
                    IsEnabled="{Binding DistributeMusicViewModel.IsLoading, Converter={StaticResource OppositeBoolConverter}}"
                    Style="{StaticResource DownloadButton}" />

                <Button
                    Command="{Binding AddFilesCommand}"
                    IsEnabled="{Binding DistributeMusicViewModel.IsLoading, Converter={StaticResource OppositeBoolConverter}}"
                    Style="{StaticResource AddFilesButton}"
                    ToolTip="{Binding KeyGestureDic[打开文件夹].ToolTip}">
                    <Button.InputBindings>
                        <MouseBinding Command="{Binding AddFolderCommand}" MouseAction="RightClick" />
                    </Button.InputBindings>
                </Button>

                <Button Command="{Binding DistributeMusicViewModel.BatchDeleteCommand}" Style="{StaticResource DeleteButton}" />
            </StackPanel>
        </Viewbox>

        <Viewbox
            Grid.Column="2"
            HorizontalAlignment="Right"
            Style="{StaticResource OnlyDownViewbox}">
            <DockPanel
                Grid.Column="2"
                DockPanel.Dock="Right"
                LastChildFill="False">
                <Border
                    VerticalAlignment="Center"
                    BorderBrush="{StaticResource TransparentButtonBackground}"
                    BorderThickness="1"
                    CornerRadius="{Binding ActualHeight, RelativeSource={RelativeSource Self}, Converter={StaticResource DigitToCornerRadiusConverter}}"
                    DockPanel.Dock="Right"
                    Visibility="{Binding DistributeMusicViewModel.CanBatchSelect, Converter={StaticResource BoolToCollapsedVisibleConverter}}">
                    <Border.Clip>
                        <MultiBinding Converter="{StaticResource MultiConverter_CornerRadiusAndSizeToClip}">
                            <MultiBinding.Bindings>
                                <Binding Path="ActualWidth" RelativeSource="{RelativeSource Self}" />
                                <Binding Path="ActualHeight" RelativeSource="{RelativeSource Self}" />

                                <Binding
                                    Converter="{StaticResource DigitToCornerRadiusConverter}"
                                    Path="ActualHeight"
                                    RelativeSource="{RelativeSource Self}" />
                            </MultiBinding.Bindings>
                        </MultiBinding>
                    </Border.Clip>
                    <WrapPanel VerticalAlignment="Center">
                        <RadioButton
                            x:Name="RadioBtnShowBySong"
                            BorderThickness="0,0,0.5,0"
                            Content="&#xe790;"
                            GroupName="MusicDisplayMode"
                            IsChecked="{Binding DistributeMusicViewModel.IsInSong}"
                            Style="{StaticResource CategoryRadioButton}"
                            ToolTip="单曲" />
                        <RadioButton
                            x:Name="RadioBtnShowByAlbum"
                            Content="&#xe6dc;"
                            GroupName="MusicDisplayMode"
                            IsChecked="{Binding DistributeMusicViewModel.IsInAlbum}"
                            Style="{StaticResource CategoryRadioButton}"
                            ToolTip="专辑" />
                        <RadioButton
                            x:Name="RadioBtnShowBySinger"
                            Content="&#xe61c;"
                            GroupName="MusicDisplayMode"
                            IsChecked="{Binding DistributeMusicViewModel.IsInSinger}"
                            Style="{StaticResource CategoryRadioButton}"
                            ToolTip="歌手" />
                        <RadioButton
                            x:Name="RadioBtnShowByDir"
                            BorderThickness="0.5,0,0,0"
                            Content="&#xebdf;"
                            GroupName="MusicDisplayMode"
                            IsChecked="{Binding DistributeMusicViewModel.IsInDir}"
                            Style="{StaticResource CategoryRadioButton}"
                            ToolTip="文件夹" />
                    </WrapPanel>
                </Border>

                <TextBox x:Name="FavoritesKeyWordsTxt" DockPanel.Dock="Right">
                    <TextBox.Style>
                        <Style BasedOn="{StaticResource TextBox_Filter}" TargetType="TextBox">

                            <Setter Property="Text" Value="{Binding DistributeMusicViewModel.FavoriteListFilteKeyWords, UpdateSourceTrigger=PropertyChanged, Delay=100}" />

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DistributeMusicViewModel.CanBatchSelect}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding IsChecked, ElementName=RadioBtnShowBySong}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>

                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding DistributeMusicViewModel.FavoriteListFilteKeyWords}" Value="{x:Null}" />
                                        <Condition Binding="{Binding DistributeMusicViewModel.DisplayFavorites.Count}" Value="0" />
                                    </MultiDataTrigger.Conditions>

                                    <Setter Property="IsEnabled" Value="False" />
                                </MultiDataTrigger>

                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding DistributeMusicViewModel.FavoriteListFilteKeyWords.Length}" Value="0" />
                                        <Condition Binding="{Binding DistributeMusicViewModel.DisplayFavorites.Count}" Value="0" />
                                    </MultiDataTrigger.Conditions>

                                    <Setter Property="IsEnabled" Value="False" />
                                </MultiDataTrigger>

                                <DataTrigger Binding="{Binding DistributeMusicViewModel.IsLoading}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <ToggleButton
                    Content="退出批量操作"
                    DockPanel.Dock="Right"
                    IsChecked="{Binding DistributeMusicViewModel.CanBatchSelect, Converter={StaticResource OppositeBoolConverter}, Mode=TwoWay}"
                    Style="{StaticResource ButtonBase_Icon_Conent_Transparent}"
                    Visibility="{Binding DistributeMusicViewModel.CanBatchSelect, Converter={StaticResource BoolToVisibleCollapsedConverter}}" />
            </DockPanel>
        </Viewbox>
    </Grid>
</UserControl>
