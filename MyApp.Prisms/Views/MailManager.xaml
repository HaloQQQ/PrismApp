             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:regions="http://prismlibrary.com/">
    <TabControl TabStripPlacement="Top" ItemContainerStyle="{StaticResource TabItem_Transparent}">
        <TabItem Header="163邮箱">
            <ContentControl FocusVisualStyle="{x:Null}" regions:RegionManager.RegionName="Smtp163MailRegion"/>
        </TabItem>
        <TabItem Header="QQ邮箱">
            <ContentControl FocusVisualStyle="{x:Null}" regions:RegionManager.RegionName="SmtpQQMailRegion"/>
        </TabItem>
    </TabControl>
</UserControl>
