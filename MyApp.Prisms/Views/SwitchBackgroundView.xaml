<UserControl
    x:Class="MyApp.Prisms.Views.SwitchBackgroundView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:selector="clr-namespace:MyApp.Prisms.DataTemplateSelectors"
    Width="310"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="#FFCCCCCC"
    CommandManager.Executed="KeyBoard_OnExecuted">
    <UserControl.Resources>
        <ResourceDictionary>
            <selector:BackgroundImageBlockDataTemplateSelector x:Key="ImageBlockDataTemplateSelector">
                <selector:BackgroundImageBlockDataTemplateSelector.BlockData>
                    <DataTemplate>
                        <ContentPresenter ContentTemplate="{StaticResource BlockImageDataTemplate}" />
                    </DataTemplate>
                </selector:BackgroundImageBlockDataTemplateSelector.BlockData>
                <selector:BackgroundImageBlockDataTemplateSelector.Empty>
                    <DataTemplate>
                        <ContentPresenter ContentTemplate="{StaticResource EmptyImageDataTemplate}" />
                    </DataTemplate>
                </selector:BackgroundImageBlockDataTemplateSelector.Empty>
            </selector:BackgroundImageBlockDataTemplateSelector>

            <selector:BackgroundImageListDataTemplateSelector x:Key="ImageListDataTemplateSelector">
                <selector:BackgroundImageListDataTemplateSelector.ListData>
                    <DataTemplate>
                        <ContentPresenter ContentTemplate="{StaticResource ListImageDataTemplate}" />
                    </DataTemplate>
                </selector:BackgroundImageListDataTemplateSelector.ListData>
                <selector:BackgroundImageListDataTemplateSelector.Empty>
                    <DataTemplate>
                        <ContentPresenter ContentTemplate="{StaticResource EmptyImageDataTemplate}" />
                    </DataTemplate>
                </selector:BackgroundImageListDataTemplateSelector.Empty>
            </selector:BackgroundImageListDataTemplateSelector>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.RenderTransform>
        <TranslateTransform X="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </UserControl.RenderTransform>

    <UserControl.InputBindings>
        <KeyBinding Key="Escape" Command="Close" />
    </UserControl.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False">
            <Button
                Command="Close"
                Content="&#xe65f;"
                DockPanel.Dock="Left"
                Style="{StaticResource ButtonBase_Icon_ScaleDown_Small_HoverBlue}"
                ToolTip="向右隐藏" />
            <ToggleButton
                DockPanel.Dock="Left"
                IsChecked="{Binding ShowInList}"
                Style="{StaticResource ToggleButton_Icon_Layout}" />

            <Button
                Command="{Binding RefreshCommand}"
                Content="&#xe63e;"
                DockPanel.Dock="Right"
                Style="{StaticResource ButtonBase_Icon_ScaleDown_Small_HoverBlue}"
                ToolTip="刷新数据" />

            <TextBlock
                DockPanel.Dock="Right"
                Style="{StaticResource TextBlock_Theme}"
                Text="{Binding ImagesCount}" />
        </DockPanel>

        <NeedleWaitLoad
            Grid.Row="1"
            Width="80"
            Foreground="DodgerBlue"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibleCollapsedConverter}}" />


        <ListBox Grid.Row="1" ItemsSource="{Binding Data}">
            <ListBox.ItemContainerStyle>
                <Style BasedOn="{StaticResource ListBoxItem_HoverScale}" TargetType="ListBoxItem">
                    <EventSetter Event="MouseDoubleClick" Handler="ChangeBackground_OnMouseLeftButtonDown" />
                    <EventSetter Event="MouseLeftButtonUp" Handler="ChangeBackground_OnMouseLeftButtonDown" />

                    <Setter Property="MyAttachProperty.CornerRadius" Value="5" />

                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="1" />

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsEmpty}" Value="True">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Selected}" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource TextBox.Focused.BorderBrush}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.Style>
                <Style BasedOn="{StaticResource ItemsControl_Virtual_VerticalScroll}" TargetType="ListBox">
                    <Setter Property="ItemsPanel">
                        <Setter.Value>
                            <ItemsPanelTemplate>
                                <VerticalVirtualizingWrapPanel Style="{StaticResource CustomVirtualizingPanelImageSelector}" />
                            </ItemsPanelTemplate>
                        </Setter.Value>
                    </Setter>

                    <Setter Property="ItemTemplateSelector" Value="{StaticResource ImageBlockDataTemplateSelector}" />

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowInList}" Value="True">
                            <Setter Property="ItemsPanel">
                                <Setter.Value>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel Style="{StaticResource VirtualStackPanelImageSelector}" />
                                    </ItemsPanelTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="ItemTemplateSelector" Value="{StaticResource ImageListDataTemplateSelector}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.Style>
        </ListBox>
    </Grid>
</UserControl>