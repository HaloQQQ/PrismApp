<UserControl
    x:Class="MyApp.Prisms.Views.TcpClientView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:regex="clr-namespace:IceTea.Atom.Contracts;assembly=IceTea.Atom"
    xmlns:viewModels="clr-namespace:MyApp.Prisms.ViewModels.BaseViewModels"
    prism:ViewModelLocator.AutoWireViewModel="True"
    SnapsToDevicePixels="True">
    <UserControl.InputBindings>
        <KeyBinding
            Key="O"
            Command="{Binding OpenLogCommand}"
            Modifiers="Ctrl" />
    </UserControl.InputBindings>

    <GroupBox>
        <GroupBox.Header>
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Foreground="Blue"
                Text="{Binding Name}" />
        </GroupBox.Header>
        <Grid CommandManager.CanExecute="CommandBinding_OnCanExecute" CommandManager.Executed="CommandBinding_Executed">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="50" />
                <RowDefinition Height="*" />
                <RowDefinition MaxHeight="50" />
            </Grid.RowDefinitions>

            <Viewbox
                Grid.Row="0"
                HorizontalAlignment="Left"
                Style="{StaticResource OnlyDownViewbox}">
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TextBlock_Theme}" Text="服务器IP：" />
                    <ComboBox ItemsSource="{x:Static viewModels:SocketViewModelBase.Ips}" Text="{Binding Ip, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.Style>
                            <Style BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="ComboBox">
                                <Setter Property="Margin" Value="0,0,5,0" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Socket.IsConnected}" Value="True">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding Socket.IsTryConnecting}" Value="True">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>


                    <TextBlock Style="{StaticResource TextBlock_Theme}" Text="服务器监听端口：" />
                    <TextBox
                        MaxLength="5"
                        MyAttachProperty.InputRegex="{x:Static regex:RegexConstants.DigitPattern}"
                        Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style BasedOn="{StaticResource TextBox_HideButton}" TargetType="TextBox">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Socket.IsConnected}" Value="True">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding Socket.IsTryConnecting}" Value="True">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <CheckBox IsChecked="{Binding TryReConnect}">
                        <TextBlock>
                            <TextBlock Style="{StaticResource TextBlock_Theme_Icon_MouseOver}" Text="&#xe627;" />
                            <TextBlock Style="{StaticResource TextBlock_Theme}" Text="自动重连：" />
                        </TextBlock>
                    </CheckBox>

                    <Button x:Name="ConnButton" Command="{Binding ConnectCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource ButtonBase_Icon_Conent_Transparent}" TargetType="Button">
                                <Setter Property="MyAttachProperty.IconFontText" Value="&#xe650;" />

                                <Setter Property="Content" Value="打开连接" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Socket.IsConnected}" Value="True">
                                        <Setter Property="Content" Value="关闭连接" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Socket.IsTryConnecting}" Value="True">
                                        <Setter Property="Content" Value="重连中.." />
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock>
                        <TextBlock Text="{Binding Socket.ReConnectPeriodMilliseconds}" />
                        <TextBlock Text="ms" />
                        <TextBlock.Style>
                            <Style BasedOn="{StaticResource TextBlock_Theme}" TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Socket.ReConnectPeriodMilliseconds}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding TryReConnect}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Viewbox>

            <RichTextBox
                x:Name="rhTxt"
                Grid.Row="1"
                Background="Transparent"
                ContextMenu="{StaticResource ForMessageBoard}"
                DockPanel.Dock="Bottom" />

            <TextBox
                Grid.Row="2"
                MinWidth="200"
                MyAttachProperty.Command="{Binding SendCommand}"
                Style="{StaticResource TextBox_PlaceHolderAsLable_PostMsg}"
                Text="{Binding SendMessage, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </GroupBox>
</UserControl>