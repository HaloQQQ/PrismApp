<UserControl
    x:Class="MyApp.Prisms.Views.WindowTitleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:MyApp.Prisms.ViewModels"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <WrapPanel MouseWheel="Bright_MouseWheel">
        <ToggleButton
            HorizontalAlignment="Left"
            IsChecked="{Binding IsLogin}"
            Style="{StaticResource ToggleButton_Icon_Login}" />
        <Popup
            IsOpen="{Binding IsLogin}"
            Placement="Center"
            PlacementTarget="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
            <Border
                MinWidth="500"
                MinHeight="400"
                Background="#CCC"
                CornerRadius="20">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80" />
                        <RowDefinition Height="160" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1.25*" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <NeedleWaitLoad Grid.Column="0" Foreground="DodgerBlue" />
                        <PointHorizonLineWaitLoad Grid.Column="1" Foreground="DodgerBlue" />
                        <PointWaitLoad Grid.Column="2" Foreground="DodgerBlue" />
                        <SquareFlipWaitLoad Grid.Column="3" Foreground="DodgerBlue" />
                        <VerticalLineWaitLoad Grid.Column="4" Foreground="DodgerBlue" />
                    </Grid>
                    <Image Grid.Row="1" Source="{Binding ImageSource}" />
                    <StackPanel
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlock_Theme}" Text="用户名：" />
                        <TextBox
                            Width="250"
                            MaxLength="12"
                            MyAttachProperty.PlaceHolder="请输入用户名"
                            TabIndex="1">
                            <TextBox.Text>
                                <Binding
                                    Delay="100"
                                    Path="UserContext.Account"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <viewmodels:CustomValidationRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="3"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlock_Theme}" Text="密   码：" />
                        <PasswordBox
                            Width="250"
                            MyAttachProperty.Password="{Binding UserContext.Password, Delay=100}"
                            TabIndex="2" />
                    </StackPanel>
                    <Button
                        Grid.Row="4"
                        HorizontalAlignment="Center"
                        Content="登录">
                        <Button.Style>
                            <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding UserContext.HasErrors}" Value="True">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Popup>

        <ToggleButton
            x:Name="BrightButton"
            HorizontalAlignment="Left"
            Click="BrightToggleButton_Click"
            Style="{StaticResource ToggleButton_Icon_Brightness}" />
        <Popup
            x:Name="BrightPopup"
            Width="250"
            Height="80"
            HorizontalOffset="-117"
            MyAttachProperty.IsAppearOnHovered="True"
            Opened="BrightPopup_Opened"
            Placement="Bottom"
            PlacementTarget="{Binding ElementName=BrightButton}"
            VerticalOffset="-5">
            <!--  亮度调节模态框  -->
            <StackPanel
                Background="{StaticResource PopupBackground}"
                Clip="{StaticResource PopupGeometryGroup_Bright}"
                Orientation="Horizontal">
                <Slider
                    Width="180"
                    Height="4"
                    Margin="15,0,12,0"
                    Style="{StaticResource Slider_ObviousThumb}"
                    TickFrequency="5"
                    Value="{Binding CurrentBright, Delay=100}" />

                <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextBlock_NotImportant_White}">
                    <TextBlock Text="{Binding CurrentBright}" />
                    %
                </TextBlock>
            </StackPanel>
        </Popup>

        <Popup
            IsOpen="{Binding Settings.IsEditingSetting}"
            Placement="Center"
            PlacementTarget="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
            <ContentControl prism:RegionManager.RegionName="SettingRegion" />
        </Popup>

        <Popup
            IsOpen="{Binding DialogMessage.IsVisible, Mode=OneWay}"
            Placement="Center"
            PlacementTarget="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
            <Border
                MinWidth="500"
                MinHeight="300"
                Background="Blue"
                CornerRadius="20"
                MouseEnter="Border_MouseEnter"
                MouseLeave="Border_MouseLeave">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        MaxWidth="500"
                        Margin="20"
                        FontSize="24"
                        Style="{StaticResource TextBlock_Theme}"
                        Text="{Binding DialogMessage.DisplayMessage}"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Grid.Row="1"
                        Margin="0,10"
                        FontSize="15"
                        Style="{StaticResource TextBlock_Theme}">
                        <TextBlock Text="{Binding DialogMessage.Seconds}" />
                        秒后关闭
                    </TextBlock>
                </Grid>
            </Border>
        </Popup>
    </WrapPanel>
</UserControl>
