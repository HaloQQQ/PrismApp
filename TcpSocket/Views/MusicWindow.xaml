<Window x:Class="TcpSocket.Views.MusicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource WithoutTitleBar}"
        xmlns:views="clr-namespace:TcpSocket.Views"
        xmlns:prism="http://prismlibrary.com/" 
        prism:ViewModelLocator.AutoWireViewModel="True"
        WindowStartupLocation="CenterScreen"
        Title="MusicWindow" MinHeight="640" MinWidth="1200">
    <Grid VerticalAlignment="Stretch" Margin="7" ClipToBounds="True">
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="{Binding CurrentBkGrd}"/>
        </Grid.Background>
        <DockPanel Background="#33000000">
            <views:WindowTitleBarView
                x:Name="TitleBarSlider"
                DockPanel.Dock="Top"
                VerticalAlignment="Top"/>

            <ContentControl prism:RegionManager.RegionName="MusicPlayerRegion"/>
        </DockPanel>

        <views:SwitchBackgroundView Width="300" HorizontalAlignment="Right" Background="#FFCCCCCC">
            <views:SwitchBackgroundView.RenderTransform>
                <TranslateTransform X="300" />
            </views:SwitchBackgroundView.RenderTransform>
        </views:SwitchBackgroundView>
    </Grid>
</Window>
